                            </div>
                        </div>
                    </div>
                  
                    </div>

                </div>
            </div>
           
          
       
           
                <table class="table" id="example3">
                    <thead>
                        <tr style="background-color:#eff6fe;border: 5px solid  rgba(135,206,250,0.5);">
                            <th>
                              Stt
                            </th>                   
                            <th>
                                Mã bệnh nhân
                            </th>
                         
                            <th>
                                Tên bệnh nhân
                            </th>
                            <th>
                                Năm sinh
                            </th>

                            <th>
                                Sđt
                            </th>
                            <th>
                                Mã phiếu thanh toán
                            </th>
                            <th>
                                Mã kế hoạch điều trị
                            </th>
                            <th>
                                Ngày tạo phiếu
                            </th>
                            <th>
                                Thao tác
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                           
                            int sttt = 1;
                            // BenhNhan benh in ViewBag.BenhNhan;
                            foreach (NoiDungThanhToan ptt in ViewBag.ptt)
                            {
                                <tr class="Search">
                                    <td style="width:2.5%">
                                        @sttt
                                    </td>
                            
                                    

                                  

                                    <td style="width:9%">
                                        @Html.DisplayFor(modelItem => ptt.IdndkhNavigation.IdkhdtNavigation.IdbnNavigation.MaBenhNhan)
                                    </td>
                                    <td style="width:11.5%">
                                        @Html.DisplayFor(modelItem => ptt.IdndkhNavigation.IdkhdtNavigation.IdbnNavigation.TenBn)
                                    </td>
                                    <td style="width:7%">
                                        @Html.DisplayFor(modelItem => ptt.IdndkhNavigation.IdkhdtNavigation.IdbnNavigation.FormatNgaySinh)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => ptt.IdndkhNavigation.IdkhdtNavigation.IdbnNavigation.Sdt)
                                    </td>
                                    <td style="width:11.5%">
                                        @Html.DisplayFor(modelItem => ptt.IdttNavigation.MaThanhToan)
                                    </td>

                                    <td style="width:7%">
                                        @Html.DisplayFor(modelItem => ptt.IdndkhNavigation.IdkhdtNavigation.MaKeHoacDieuTri)
                                    </td>
                                    <td style="width:11%">
                                        @Html.DisplayFor(modelItem => ptt.IdttNavigation.NgayThanhToan)
                                    </td>
                                    <td style="width:8%">
                                        @if (int.TryParse(ptt.IdndkhNavigation.IdkhdtNavigation.DieuTri, out int dieuTriValue1) && dieuTriValue1 != 3)
                                        {
                                            @if(ptt.ThanhToan !="1"){
                                                <a href="@Url.Action("SuaPhieuThanhToan", "ThanhToans", new { id = ptt.Idtt, id2 = ViewBag.bn.Idbn })">                                                  
                                                     <box-icon name='credit-card' animation='tada-hover' color='#008713'></box-icon>
                                                </a>
                                            }
                                            else{}

                                         
                                          
                                            <a class="open-modal2" data-bs-toggle="modal" data-bs-target="#myModal2" data-url="@Url.Action("ChiTietPhieuThanhToan", "BenhNhans", new {  id = ptt.Idtt, id2 = ViewBag.bn.Idbn  })">
                                                <box-icon type='solid' name='info-circle' animation='tada-hover' color='@((ptt.ThanhToan != "1") ? "red" : "#05cdf6")'></box-icon>
                                            </a>

                                            


                                            <a href="@Url.Action("PdfPhieuThanhToan", "BenhNhans", new { id = ptt.Idtt, id2 = ViewBag.bn.Idbn })">
                                                <box-icon name='file-pdf' type='solid' color='#e83f3f' animation='tada-hover'></box-icon>
                                            </a>
                                        }
                                        else
                                        {
                                            <a class="open-modal3" data-bs-toggle="modal" data-bs-target="#myModal3" data-url="@Url.Action("ChiTietPhieuThanhToan", "BenhNhans", new {  id = ptt.Idtt, id2 = ViewBag.bn.Idbn  })">
                                                <box-icon type='solid' name='info-circle' animation='tada-hover' color='@((ptt.ThanhToan != "1") ? "red" : "#05cdf6")'></box-icon>
                                            </a>

                                           
                                            <a href="@Url.Action("PdfPhieuThanhToan", "BenhNhans", new { id = ptt.Idtt, id2 = ViewBag.bn.Idbn })">
                                                <box-icon name='file-pdf' type='solid' color='#e83f3f' animation='tada-hover'></box-icon>
                                            </a>
                                        }
                                    </td>


                                </tr>
                                sttt++; // Tăng số thứ tự sau mỗi lần lặp
                            }
                        }
               
                    </tbody>
                </table>
        <div class="modal" id="myModal3" tabindex="-1">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-body">
                        <div id="partial-view-container3"></div>
                    </div>
                </div>
            </div>
        </div>
        <div class="modal" id="myModal2" tabindex="-1">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-body">
                        <div id="partial-view-container2"></div>
                    </div>
                </div>
            </div>
        </div>
             </div>



          </div>
      
    


<script src="~/js/khdt.js" asp-append-version="true"></script>

