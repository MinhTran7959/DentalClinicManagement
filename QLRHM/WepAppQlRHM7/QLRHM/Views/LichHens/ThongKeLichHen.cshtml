@model IEnumerable<QLRHM.Models.LichHen>

@{
    ViewData["Title"] = "ThongKeLichHen";
    Layout = "~/Views/Shared/Home.cshtml";
   
}
<style>
    .service-item {
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.3); /* Điều chỉnh giá trị để thay đổi kích thước và màu của bóng đổ */
        transition: box-shadow 0.3s ease; /* Thêm hiệu ứng chuyển động cho bóng đổ */
        height:110%;
        border: 2px solid #00e1ff;
        border-radius: 20px;
    }
        .service-item:hover {
            box-shadow: 0px 0px 20px rgb(5 159 255 / 50%); /* Hiệu ứng khi di chuột vào phần tử */
        }
        .SapToi{
        color: rgb(2 162 70 / 76%);
        margin-left: 15%;
        font-weight: 700;
        border: 2px solid;
       
        padding: 5px;
        }.HetHan{
        color: #ff000085;
        margin-left: 15%;
        font-weight: 700;
        border: 2px solid;
        
        padding: 5px;
        }
   
    .service-item {
      
    }

    .het-han {
        border-color: red;
    }

    .sap-toi {
        border-color: rgb(2 162 70 / 76%);
    }

</style>
<div class="row" style="padding-top:10px ; padding-bottom:5px; border:2px solid #569ff7 ; padding-bottom:10px;margin: 5px 1px 10px 10px;">
    <span style="color:#569ff7; text-align:center; font-weight:700; font-size:18px"> Tra cứu danh sách lịch hẹn </span>
    <div class="col-md-12" style="padding-left:2%;">
        <form asp-action="ThongKeLichHen" method="post" id="abc">
                <div class="row">
                    <!-- ... (các trường khác) ... -->

                <div class="col-md-3" style=" min-width:210px ;max-width: 250px;">
                        <div class="form-group">
                            <div class="input-group">
                                <label style="margin-top: 7px;padding-right: 10px;" class="control-label">Bác Sĩ:</label>
                            <select name="searchString" class="form-select ">
                                <option value="">Tất cả</option>
                                @foreach (var Bs in ViewBag.Bs)
                                {
                                   
                                    <option value="@Bs">@Bs</option>
                                }
                            </select>
                            </div>
                        </div>
                </div>
                <div class="col-md-2" style=" min-width: 120px;max-width: 210px;">
                        <div class="form-group">
                            <div class="input-group">
                                <label style="margin-top: 7px;padding-right: 10px;" class="control-label">Từ ngày:</label>
                                <input name="fo" class="form-control Ngay2" value="@ViewBag.fromDate" placeholder="Từ ngày" />
                            </div>
                        </div>
                    </div>

                <div class="col-md-2" style=" min-width: 120px;max-width: 215px;">
                        <div class="form-group">
                            <div class="input-group">
                                <label style="margin-top: 7px;padding-right: 10px;" class="control-label">Đến ngày:</label>
                                <input name="to" class="form-control Ngay2" value="@ViewBag.toDate" placeholder="Đến ngày" />
                            </div>
                        </div>
                    </div>
                <div class="col-md-2" style="max-width: 190px; display: none">
                        <div class="form-group">
                            <div class="input-group">
                                <label style="margin-top: 7px;padding-right: 10px;" class="control-label">Thời gian từ :</label>
                            <input name="fromTime" class="form-control GioHen" value="@ViewBag.fromTimeValue" placeholder="Đến ngày" />
                            </div>
                        </div>
                    </div>
                <div class="col-md-2" style="max-width: 130px;display: none">
                        <div class="form-group">
                            <div class="input-group">
                                <label style="margin-top: 7px;padding-right: 10px;" class="control-label">Đến:</label>
                            <input name="toTime" class="form-control GioHen" value="@ViewBag.toTimeValue" placeholder="Đến ngày" />
                            </div>
                        </div>
                    </div>

                <div class="col-md-2" >
                    <div class="mx-auto">
                        <div class="input-group">
                            <input type="text" name="searchString" id="Search" value="@ViewBag.searchString" class="form-control border-primary w-50" placeholder="Tìm kiếm theo từ khoá">

                        </div>
                    </div>
                </div>

                <div class="col-md-1 " style=" min-width:120px" >
                        <div class="form-group">
                            <input style="color:black" type="submit" value="Tìm kiếm" class="btn btn-primary form-control" />
                        </div>
                    </div>

                </div>
            </form>
        </div>






    
</div>
  

<div class="row g-5 " style=" padding-left:2%; padding-right:2% ;">
    @foreach (var item in Model)
    {
        var formatGioHen = item.GioHen?.ToString("hh\\:mm");
        <div class="col-lg-3 col-md-3 search">
            <div class="service-item @if(item.TrangThai != 1 ){@(item.NgayHen < DateTime.Now.Date ? "het-han" : "sap-toi")} else{} ">
                <div class="row">
                    <div class="col-md-3">
                        <div class="rounded-image">
                            <img src="~/image/BN/@item.IdndkhNavigation.IdkhdtNavigation.IdbnNavigation.AnhBn" alt="Ảnh" />
                        </div>
                    </div>
                    <div class="col-md-9">
                        <h6 class="mb-3" style="margin-bottom:0rem !important">@item.IdndkhNavigation.IdkhdtNavigation.IdbnNavigation.MaBenhNhan</h6>
                        <h7 class="tt">@item.IdndkhNavigation.IdkhdtNavigation.IdbnNavigation.TenBn (@item.IdndkhNavigation.IdkhdtNavigation.IdbnNavigation.NgaySinh.Year)</h7>                       
                        <h7 class="tt">Sđt:@item.IdndkhNavigation.IdkhdtNavigation.IdbnNavigation.Sdt</h7>
                    </div>
                </div>
                 <p class="m-0" style="font-weight:700">Bs.@item.IdndkhNavigation.IdbsdtNavigation.TenBs</p>
                 <p class="m-0" style="font-weight:700">Lịch hẹn: @item.MaLichHen</p>
                <p class="m-0" > Cv:@item.IdndkhNavigation.IdcvdtNavigation.TenCongViec</p>
                <p class="m-0">
                    @item.NgayHen.ToString("dd/MM/yyyy") - @formatGioHen
                    @if (item.NgayHen < DateTime.Now.Date && item.TrangThai !=1 )
                    {
                        <a class="HetHan">Hết hạn</a>
                    }
                    else if (item.TrangThai ==1)
                    {
                        <a >Đã kết thúc</a>
                    }
                    else if ( item.NgayDen != null && item.NgayHen.Date > item.NgayDen.Value.Date  && item.TrangThai == 1)
                    {
                        <a class="HetHan">Tới muộn</a>
                    }

                    else
                    {
                        <a class="SapToi">Sắp tới</a>
                    }
                </p>

                 

               @*  <a class="btn btn-lg btn-primary rounded-pill" asp-action="KHDT" asp-controller="LichHens"
                   asp-route-id="@item.IdndkhNavigation.IdkhdtNavigation.IdbnNavigation.Idbn" asp-route-to="@ViewBag.toDate" asp-route-fo="@ViewBag.fromDate">
                       
                    <i class="bi bi-arrow-right"></i>
                </a> *@
            </div>
            </div>
    }
 </div>


<div class="row" style="margin-top:3%">
        <div>
            @{
                int PrevPage = ViewBag.Page - 1;
                if (PrevPage <= 0)
                {
                    PrevPage = 1;
                }
                int NextPage = ViewBag.Page + 1;
                if (NextPage > ViewBag.NoOfPages)
                {
                    NextPage = ViewBag.NoOfPages;
                }
            }
        <ul class="pagination justify-content-center">
            <li class="page-item @(ViewBag.Page == 1 ? "disabled" : "")">
                <a class="page-link page-number" href="@Url.Action("ThongKeLichHen", new { page = PrevPage ,to =@ViewBag.toDate , fo =@ViewBag.fromDate,fromTime=@ViewBag.fromTimeValue,toTime=@ViewBag.toTimeValue })">
                    &lt;&lt;&lt;
                </a>
            </li>
            @for (int i = 0; i < ViewBag.NoOfPages; i++)
            {
                <li class="page-item @(i + 1 == ViewBag.Page ? "active" : "")">
                    <a class="page-link page-number" href="@Url.Action("ThongKeLichHen", new { page = i + 1 ,to =@ViewBag.toDate , fo =@ViewBag.fromDate,fromTime=@ViewBag.fromTimeValue,toTime=@ViewBag.toTimeValue})">
                        @(i + 1)
                    </a>
                </li>
            }
            <li class="page-item @(ViewBag.Page == ViewBag.NoOfPages ? "disabled" : "")">
                <a class="page-link page-number" href="@Url.Action("ThongKeLichHen", new { page = NextPage ,to =@ViewBag.toDate , fo =@ViewBag.fromDate,fromTime=@ViewBag.fromTimeValue,toTime=@ViewBag.toTimeValue})">
                    &gt;&gt;&gt;
                </a>
            </li>
        </ul>

        </div>
    </div>


<script>
    $(document).ready(function () {
        $("#Search").on("keyup", function () {
            var searchText = $(this).val().toLowerCase();
            $(".search").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(searchText) > -1);
            });
        });
    });
</script>

